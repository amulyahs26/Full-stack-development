<!DOCTYPE html>
<html>

<head>
    <title>Book Ticket</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('partials/header') %>
        <h2>Book a Ticket</h2>
        <form action="/book" method="POST">
            <label>Airline:</label>
            <select name="airline" required>
                <% airlines.forEach(a=> { %>
                    <option>
                        <%= a %>
                    </option>
                    <% }); %>
            </select><br><br>

            <input type="text" name="source" placeholder="Source" required><br><br>
            <input type="text" name="destination" placeholder="Destination" required><br><br>
            <input type="date" name="date" required><br><br>
            <input type="text" name="customerId" placeholder="Customer ID" required><br><br>

            <button type="submit">Book Ticket</button>
        </form>
</body>

</html>